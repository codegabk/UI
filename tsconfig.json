{
  "extends": "expo/tsconfig.base",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "declaration.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
